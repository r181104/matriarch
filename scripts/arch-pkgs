#!/bin/sh

BASEPKGS=(
   vim
   neovim
   git
   wget
   curl
   fish
   starship
   fzf
   zoxide
)

TERMPKGS=(
    alacritty
    kitty
    ghostty
)

LSPSRVR=(
    lua-language-server
    python-lsp-server
)

FORMATTER=(
    stylua
    prettier
    python-black
    python-isort
    shfmt
    yamlfmt
    clang 
    go-tools
    prettierd
    google-java-format
)

BROWSER=(
    brave-bin
)

GTK=(
    gtk2
    gtk3 
    gtk4
    gdk-pixbuf2
    libcups
    pango 
    cairo
    gtk-update-icon-cache
    shared-mime-info
    hicolor-icon-theme
)

PREFFEREDDM=(
    cosmic
)

# Install packages by category
install_package_group() {
  local group_name="$1"
  shift
  local packages=("$@")

  echo -e "\n${BLUE}Installing $group_name...${NC}"
  if paru -S --needed --noconfirm "${packages[@]}"; then
    echo "Installed successfully"
  else
    echo "Failed to install"
    return 1
  fi
}

# Install all package groups
install_package_group "write aything you need I am lazy so not writing anything" "${BASEPKGS[@]}"
install_package_group "write aything you need I am lazy so not writing anything" "${TERMPKGS[@]}"
install_package_group "write aything you need I am lazy so not writing anything" "${GTK[@]}"
install_package_group "write aything you need I am lazy so not writing anything" "${LSPSRVR[@]}"
install_package_group "write aything you need I am lazy so not writing anything" "${FORMATTER[@]}"
install_package_group "write aything you need I am lazy so not writing anything" "${BROWSER[@]}"
install_package_group "write aything you need I am lazy so not writing anything" "${PREFFEREDDM[@]}"
