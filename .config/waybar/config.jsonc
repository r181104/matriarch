{
    "layer": "bottom",
    "exclusive": true,
    "position": "bottom",
    "fixed-center": true,

    "modules-left": [
        "custom/stream_status",
        "hyprland/workspaces",
        "custom/weather"
    ],
    "modules-center": [
        "clock",
        "custom/notification",
        "tray"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "disk",
        "disk#home",
        "pulseaudio",
        "battery#forest",
        "custom/lock",
    ],

    "hyprland/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {
            "1": "Û∞£á", "2": "Û∞àπ", "3": "Ôâ®", "4": "ÓÆ°",
            "6": "ÓØâ", "7": "Ó£ö", "8": "Ôâ®", "9": "Û∞àπ",
            "10": "ÓØâ", "active": "Û∞ÆØ", "default": "Óûï", "urgent": "üëª"
        }
    },

    "tray": {
        "icon-size": 20,
        "spacing": 8
    },

    "clock": {
        "timezone": "Asia/Kolkata",
        "format": "{:%A, %d %b %Y | %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "tooltip": true
    },

    "network": {
        "format-wifi": "Û∞§¢",
        "format-ethernet": "Û∞àÄ",
        "format-disconnected": "Û∞§†",
        "interval": 5,
        "tooltip": false
    },

    "cpu": {
        "interval": 1,
        "format": "{icon} {usage:>2}%",
        "format-icons": ["‚ñÅ","‚ñÇ","‚ñÉ","‚ñÑ","‚ñÖ","‚ñÜ","‚ñá","‚ñà"]
    },

    "memory": {
        "interval": 10,
        "format": "ÓøÖ {used:0.1f}/{total:0.1f}G",
        "format-alt": "{percentage}% ÓøÖ",
        "tooltip": true,
        "tooltip-format": "{used:.1f}G / {total:.1f}G"
    },

    "disk": {
        "interval": 30,
        "format": "Û∞Üº {percentage_used}%",
        "path": "/",
        "tooltip": true,
        "tooltip-format": "Root: {used:.1f}G / {total:.1f}G ({percentage_used}%)"
    },

    "disk#home": {
        "interval": 30,
        "format": "Û∞Üº {percentage_used}%",
        "path": "/home",
        "tooltip": true,
        "tooltip-format": "Home: {used:.1f}G / {total:.1f}G ({percentage_used}%)"
    },

    "pulseaudio": {
        "on-click": "pypr toggle pavucontrol && hyprctl dispatch bringactivetotop",
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} Û∞Ç∞ {volume}%",
        "format-muted": "Û∞ñÅ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶","ÔÄß","Û∞ïæ","ÔÄ®"]
        }
    },

    "battery#forest": {
        "align": 0,
        "full-at": 100,
        "design-capacity": false,
        "states": {"good": 95, "warning": 30, "critical": 15},
        "format": "{icon} {capacity}%",
        "format-charging": "Û±êå {capacity}%",
        "format-plugged": "Û±òñ {capacity}%",
        "format-full": "{icon} Full",
        "format-alt": "{icon} {time}",
        "format-time": "{H}h {M}min",
        "tooltip": true,
        "tooltip-format": "{timeTo} {power}w",
        "format-icons": ["Û∞Çé","Û∞Å∫","Û∞Åª","Û∞Åº","Û∞ÅΩ","Û∞Åæ","Û∞Åø","Û∞ÇÄ","Û∞ÇÅ","Û∞ÇÇ","Û∞Åπ"]
    },

    "custom/lock": {
        "tooltip": false,
        "on-click": "sh -c '(wlogout)' & disown",
        "format": "ÔÄ£"
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },

    "custom/stream_status": {
        "format": "{text}",
        "exec": "~/.local/scripts/stream_status",
        "interval": 5,
        "return-type": "json",
        "tooltip": true
    },

    "custom/weather": {
        "exec": "~/.config/waybar/scripts/weather",
        "return-type": "json",
        "interval": 900,
        "tooltip": true,
        "on-click": "xdg-open 'https://wttr.in/Saharanpur'"
    }
}
