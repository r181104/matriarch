#!/bin/sh

set -euo pipefail

SSH_KEY="~/.ssh/id_rsa"
if [[ -f "$SSH_KEY" ]]; then
    echo "Adding SSH key..."
    ssh-add "$SSH_KEY" || true
else
    echo "⚠️ No SSH key at $SSH_KEY (skipping ssh-add)."
    echo "Generate one with: ssh-keygen -t ed25519"
fi

echo
echo "==> ✅ Done!"
echo "Reboot or log out/in to activate SSH integration."
